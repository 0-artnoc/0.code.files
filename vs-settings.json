// Place your settings in this file to overwrite the default settings
{
  "zenMode.hideTabs": false,
  "diffEditor.renderSideBySide": false,

  "explorer.autoReveal": false,
  "explorer.openEditors.visible": 0,
  "explorer.sortOrder": "type",

  "editor.folding": false,
  "editor.selectionHighlight": false,
  "editor.parameterHints": false,
  "editor.wordBasedSuggestions": false,
  "editor.cursorBlinking": "solid",
  "editor.fontFamily": " Fira Code",
  "editor.fontLigatures": true,
  "editor.lineHeight": 16,
  "editor.lineNumbers": "on",
  "editor.fontSize": 13,
  "editor.minimap.enabled": false,
  "editor.matchBrackets": true,
  "editor.formatOnType": true,
  "editor.renderIndentGuides": true,
  "editor.autoIndent": true,
  "editor.tabSize": 2,
  "editor.renderLineHighlight": "line",
  "editor.insertSpaces": false,
  "editor.snippetSuggestions": "none",

  "window.restoreWindows": "none",
  "window.nativeTabs": true,
  "window.title": "You're here - ${separator}${activeEditorMedium}",
  "window.titleBarStyle": "native",

  "terminal.external.osxExec": "iTerm.app",
  // "gitlens.blame.line.enabled": false,
  // "gitlens.statusBar.enabled": false,
  // "gitlens.codeLens.enabled": false,
  "git.decorations.enabled": false,

  "files.trimTrailingWhitespace": true,
  "files.hotExit": "off",
  // exclude files from being shown in explorer
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*/__pycache__": true,
    "**/node_modules": true
  },
  //python
  "python.pythonPath": "/usr/local/bin/python3",
  "python.venvPath": "/Users/jberria/PyEnvironements/",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/typings": true,
    "**/__pycache__": true,
    "**/.DS_Store": true,
    "**/ios/build": true // react native
  },
  //typescript
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
  "tslint.jsEnable": true,
  "javascript.nameSuggestions": false,

  //language settings
  "[cpp]": {
    "editor.tabSize": 4,
    "editor.autoClosingBrackets": true
  },
  "[go]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  "[c]": {
    "editor.tabSize": 4,
    "editor.autoClosingBrackets": true
  },
  "[json]": {
    "editor.tabSize": 4
  },
  "[swift]": {
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": false
    },
    "editor.tabSize": 4,
    "editor.autoClosingBrackets": true
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
  },

  "workbench.iconTheme": "flatland-icon-theme",
  "workbench.editor.swipeToNavigate": true,
  "workbench.activityBar.visible": false,
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": true,
  "workbench.commandPalette.history": 5,
  "workbench.fontAliasing": "antialiased",
  "workbench.editor.revealIfOpen": true,
  "window.zoomLevel": 0,
  "workbench.colorTheme": "Material Theme",
  "workbench.colorCustomizations": {
    "activityBarBadge.background": "#FF7042",
    "list.activeSelectionForeground": "#FF7042",
    "list.inactiveSelectionForeground": "#FF7042",
    "list.highlightForeground": "#FF7042",

    "scrollbarSlider.activeBackground": "#FF704250",
    "editorSuggestWidget.highlightForeground": "#FF7042",
    "textLink.foreground": "#FF7042",
    "progressBar.background": "#FF7042",
    "pickerGroup.foreground": "#FF7042",
    "tab.activeBorder": "#FF7042",
    "editor.background": "#1b2b34",
    "sideBarSectionHeader.background": "#22323a",
    "peekView.border": "#cc5050",
    "peekViewEditor.background": "#283b47",
    "peekViewResult.background": "#283b47",
    "peekViewEditorGutter.background": "#283b47",
    "peekViewEditor.matchHighlightBackground": "#013819",

    "editorLineNumber.foreground": "#556474",
    "sideBar.background": "#22323a",
    "sideBar.foreground": "#b3c0cc",
    "statusBar.foreground": "#b3c0cc",
    "statusBar.background": "#22323a",
    "panel.background": "#22323a",
  },
  "materialTheme.cache.workbench.settings": {
    "accent": "Orange",
    "themeColours": "Default"
  },

  "react-native.ios.runArguments.simulator": [
    "--simulator",
    "iPhone X"
  ],
  "jest.autoEnable": false
}