// Place your settings in this file to overwrite the default settings
{
  "zenMode.hideTabs": false,
  "diffEditor.renderSideBySide": true,

  "explorer.autoReveal": false,
  "explorer.openEditors.visible": 0,
  "explorer.sortOrder": "type",

  "search.location": "panel",

  "editor.folding": false,
  "editor.lineNumbers": "on",
  "editor.selectionHighlight": false,
  "editor.parameterHints": false,
  "editor.wordBasedSuggestions": false,
  "editor.cursorBlinking": "solid",
  "editor.fontLigatures": true,
  "editor.fontFamily": "Fira Code",
  "editor.minimap.enabled": false,
  "editor.matchBrackets": true,
  "editor.formatOnType": true,
  "editor.renderIndentGuides": false,
  "editor.autoIndent": true,
  "editor.tabSize": 2,
  "editor.renderLineHighlight": "line",
  "editor.insertSpaces": false,
  "editor.snippetSuggestions": "none",
  "editor.find.autoFindInSelection": true,

  "window.restoreWindows": "none",
  "window.titleBarStyle": "native",
  "window.title": "${folderName}${separator}${activeEditorMedium}",

  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.fontFamily": "Fira Code",
  "terminal.integrated.fontWeightBold": "normal",
  "git.decorations.enabled": false,

  "files.trimTrailingWhitespace": true,
  "files.hotExit": "off",
  // exclude files from being shown in explorer
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*/__pycache__": true,
    "**/node_modules": true
  },
  //python
  "python.pythonPath": "/usr/local/bin/python3",
  "python.venvPath": "~/PyEnvironments",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/typings": true,
    "**/__pycache__": true,
    "**/.DS_Store": true,
    "**/private": true,
    "**/var": true,
    "**/.git": true,
    "**/*.map": true,
    "**/ios/build": true // react native
  },
  //typescript
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
  "tslint.jsEnable": true,
  "javascript.nameSuggestions": false,

  //go
  "go.coverageDecorator": "gutter",
  "go.coverageOptions": "showCoveredCodeOnly",
  "go.testFlags": ["-v"],
  "go.formatTool": "goimports",
  "go.lintTool": "gometalinter",
  "go.lintFlags": [
    "--disable=all",
    "--enable=vet",
    "--enable=golint",
    "--enable=deadcode",
    "--enable=errcheck",
    "--enable=structcheck",
  ],

  //language settings
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.autoClosingBrackets": true
  },
  "[cpp]": {
    "editor.tabSize": 4,
    "editor.autoClosingBrackets": true
  },
  "[go]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  "[c]": {
    "editor.tabSize": 4,
    "editor.autoClosingBrackets": true
  },
  "[json]": {
    "editor.tabSize": 4
  },
  "[swift]": {
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": false
    },
    "editor.tabSize": 4,
    "editor.autoClosingBrackets": true
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.useTabStops": true
  },

  "workbench.statusBar.feedback.visible": false,
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "One Monokai Darker",
  "workbench.editor.swipeToNavigate": true,
  "workbench.activityBar.visible": false,
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": true,
  "workbench.commandPalette.history": 5,
  "workbench.fontAliasing": "antialiased",
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.colorCustomizations": {
    "activityBar.background": "#1e1e1e",
    "editorCursor.foreground": "#a8caeb",
    "activityBarBadge.background": "#046dc4",
    "scrollbarSlider.background": "#30445500",
  },
  "window.zoomLevel": 0,

  "react-native.ios.runArguments.simulator": [
    "--simulator",
    "iPhone X"
  ],

  "vim.easymotion": true,
  "vim.leader": ",",
  "vim.useSystemClipboard": true,
  "vim.showmodename": false,
  "vim.useCtrlKeys": false,

  "explorer.confirmDelete": false,
  "diffEditor.ignoreTrimWhitespace": true,
  "debug.showInStatusBar": "never",
  "gitk.fontFamily": "Fira Code",
}
